<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4 rounded-4 border-0 shadow-lg">
            <div class="text-danger mb-3">
                <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
            </div>
            <h4 class="fw-bold mb-2">Eliminar Usuario</h4>
            <p class="text-muted mb-4" id="deleteUserMessage">
                ¿Estás seguro de eliminar este usuario?
            </p>

            <form method="post" asp-page-handler="Delete">
                <input type="hidden" name="id" id="deleteUserId" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger rounded-pill px-4">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
