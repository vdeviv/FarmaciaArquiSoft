@page
@model FarmaView.Pages.Users.ProfileModel
@{
    ViewData["Title"] = "Mi perfil";
    Layout = "_Layout";
}

@if (Model.Current is null)
{
    <div class="alert alert-danger text-center my-5">
        <i class="bi bi-exclamation-triangle me-2"></i>
        No se pudo cargar tu perfil.
    </div>
}
else
{
    <div class="container py-5">
        <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 850px;">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-success bg-opacity-10 p-4 mb-3">
                        <i class="bi bi-person-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="fw-bold text-success mb-1">@Model.Current.first_name @Model.Current.last_first_name</h3>
                    <p class="text-muted mb-0">@Model.Current.role</p>
                    <hr class="mt-4 mb-4" />
                </div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="profile-field">
                            <span class="field-label">Usuario</span>
                            <span class="field-value">@Model.Current.username</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="profile-field">
                            <span class="field-label">Correo electrónico</span>
                            <span class="field-value">@Model.Current.mail</span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="profile-field">
                            <span class="field-label">Teléfono</span>
                            <span class="field-value">@Model.Current.phone</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="profile-field">
                            <span class="field-label">Rol</span>
                            <span class="field-value">@Model.Current.role</span>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <a class="btn btn-success rounded-pill px-4"
                       asp-page="Edit" asp-route-id="@Model.Current.id">
                        <i class="bi bi-pencil-square me-2"></i> Editar perfil
                    </a>

                    <button type="button" class="btn btn-outline-primary rounded-pill px-4"
                            data-bs-toggle="modal" data-bs-target="#detailsModal">
                        <i class="bi bi-eye me-2"></i> Ver detalles
                    </button>

                    <a class="btn btn-warning rounded-pill px-4 text-white"
                       asp-page="/Auth/ChangePassword">
                        <i class="bi bi-shield-lock me-2"></i> Cambiar contraseña
                    </a>

                    <form method="post" asp-page-handler="Delete"
                          onsubmit="return confirm('¿Seguro que deseas desactivar tu cuenta?');">
                        <button type="submit" class="btn btn-outline-danger rounded-pill px-4">
                            <i class="bi bi-trash3 me-2"></i> Desactivar cuenta
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header bg-success text-white rounded-top-4">
                    <h5 class="modal-title fw-semibold" id="detailsModalLabel">
                        <i class="bi bi-info-circle me-2"></i>Detalles del usuario
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="table-responsive">
                        <table class="table table-borderless align-middle">
                            <tbody>
                                <tr><th>Usuario</th><td>@Model.Current.username</td></tr>
                                <tr><th>Nombres</th><td>@Model.Current.first_name</td></tr>
                                <tr><th>Apellido paterno</th><td>@Model.Current.last_first_name</td></tr>
                                <tr><th>Apellido materno</th><td>@Model.Current.last_second_name</td></tr>
                                <tr><th>Correo</th><td>@Model.Current.mail</td></tr>
                                <tr><th>Teléfono</th><td>@Model.Current.phone</td></tr>
                                <tr><th>CI</th><td>@Model.Current.ci</td></tr>
                                <tr><th>Rol</th><td>@Model.Current.role</td></tr>
                                <tr><th>Estado</th><td>@(Model.Current.is_deleted ? "Eliminado" : "Activo")</td></tr>
                                <tr><th>¿Cambió contraseña?</th><td>@(Model.Current.has_changed_password ? "Sí" : "No")</td></tr>
                                <tr><th>Versión de contraseña</th><td>@Model.Current.password_version</td></tr>
                                <tr><th>Último cambio de contraseña</th><td>@(Model.Current.last_password_changed_at?.ToString("yyyy-MM-dd HH:mm") ?? "—")</td></tr>
                                <tr><th>Creado</th><td>@Model.Current.created_at.ToString("yyyy-MM-dd HH:mm")</td></tr>
                                <tr><th>Actualizado</th><td>@(Model.Current.updated_at?.ToString("yyyy-MM-dd HH:mm") ?? "—")</td></tr>
                                <tr><th>Creado por</th><td>@(Model.Current.created_by?.ToString() ?? "—")</td></tr>
                                <tr><th>Actualizado por</th><td>@(Model.Current.updated_by?.ToString() ?? "—")</td></tr>
                                <tr><th>Contraseña</th><td>[protegido]</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i> Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
}
