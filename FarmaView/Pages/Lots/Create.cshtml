@page
@model FarmaView.Pages.Lots.CreateModel
@{
    ViewData["Title"] = "Registrar Lote";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Lote
            </h3>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">CÃ³digo de Lote</label>
                        <input asp-for="Lot.BatchNumber" class="form-control rounded-pill" placeholder="Ej. L-1002" required />
                        <span asp-validation-for="Lot.BatchNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Fecha de Vencimiento</label>
                        <input asp-for="Lot.ExpirationDate" type="date" class="form-control rounded-pill" required />
                        <span asp-validation-for="Lot.ExpirationDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Cantidad Disponible</label>
                        <input asp-for="Lot.Quantity" type="number" min="1" class="form-control rounded-pill" required />
                        <span asp-validation-for="Lot.Quantity" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Costo Unitario (Bs.)</label>
                        <input asp-for="Lot.UnitCost" type="number" step="0.01" min="0" class="form-control rounded-pill" required />
                        <span asp-validation-for="Lot.UnitCost" class="text-danger small"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
                        <i class="bi bi-save me-2"></i>Guardar
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
