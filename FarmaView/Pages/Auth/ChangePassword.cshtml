@page
@model FarmaView.Pages.Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar contraseña";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">
                    <i class="bi bi-shield-lock me-2"></i> Cambiar contraseña
                </h4>

                @if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
                {
                    <div class="alert alert-danger">@err</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label for="Current" class="form-label">Contraseña actual</label>
                        <input asp-for="Current" type="password" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="Current" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="New1" class="form-label">Nueva contraseña</label>
                        <input asp-for="New1" type="password" class="form-control" autocomplete="new-password" />
                        <span class="form-text">Mínimo 8 caracteres, mezcla recomendada de letras, números y símbolos.</span>
                        <span asp-validation-for="New1" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="New2" class="form-label">Repite la nueva contraseña</label>
                        <input asp-for="New2" type="password" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="New2" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check2-circle me-1"></i> Actualizar
                        </button>
                        <a asp-page="/Users/Profile" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
