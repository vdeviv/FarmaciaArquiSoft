@page "{encryptedId?}"
@model FarmaView.Pages.Lots.EditModel
@{
    ViewData["Title"] = "Editar Lote";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Editar Lote
            </h3>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <input type="hidden" asp-for="Input.Id" />
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Código de Lote</label>
                        <input asp-for="Input.BatchNumber" class="form-control rounded-pill" readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Fecha de Vencimiento</label>
                        <input asp-for="Input.ExpirationDate" type="date" class="form-control rounded-pill" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Cantidad Disponible</label>
                        <input asp-for="Input.Quantity" type="number" min="1" class="form-control rounded-pill" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Costo Unitario (Bs.)</label>
                        <input asp-for="Input.UnitCost" type="number" step="0.01" min="0" class="form-control rounded-pill" required />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-warning px-4 rounded-pill shadow-sm text-white">
                        <i class="bi bi-check2-circle me-2"></i>Actualizar
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
