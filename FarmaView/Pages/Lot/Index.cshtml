@page
@model FarmaView.Pages.Lots.IndexModel
@{
    ViewData["Title"] = "Gestión de Lotes";
    var encryptionService = (ServiceCommon.Domain.Ports.IEncryptionService)
        Model.HttpContext.RequestServices.GetService(typeof(ServiceCommon.Domain.Ports.IEncryptionService))!;
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <h2 class="fw-bold text-success mb-0">
        <i class="bi bi-box-seam me-2"></i> Gestión de Lotes
    </h2>

    <a asp-page="/Lots/Create" class="btn btn-success shadow-sm rounded-pill px-4 d-flex align-items-center">
        <i class="bi bi-plus-circle me-2"></i> Nuevo Lote
    </a>
</div>

@if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @err
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead class="table-success text-dark">
                <tr>
                    <th>Código de Lote</th>
                    <th>Fecha de Vencimiento</th>
                    <th>Cantidad</th>
                    <th>Costo Unitario (Bs.)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Lots != null && Model.Lots.Any())
                {
                    foreach (var lot in Model.Lots)
                    {
                        // 2. Cifrar el ID del lote
                        string encryptedId = encryptionService.EncryptId(lot.Id);

                        <tr>
                            <td class="fw-semibold">@lot.BatchNumber</td>
                            <td>@lot.ExpirationDate.ToString("dd/MM/yyyy")</td>
                            <td>@lot.Quantity</td>
                            <td>@lot.UnitCost.ToString("F2")</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-page="/Lots/Edit" asp-route-encryptedId="@encryptedId"
                                       class="btn btn-sm btn-outline-warning px-3 rounded-pill" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger px-3 rounded-pill"
                                            title="Eliminar"
                                            onclick="openDeleteModal('@encryptedId', '@lot.BatchNumber')">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-inbox me-2"></i> No hay lotes registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_DeleteModalPartial" />

@section Scripts {
    <script>
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        // La función ahora recibe el ID encriptado
        function openDeleteModal(encryptedId, batchNumber) {
            // 5. Asignar el ID encriptado al input oculto (asumiendo que tiene id="deleteId" y su nombre es "encryptedId" o el PageModel espera "id")
            // Para que funcione con OnPostDeleteAsync(string encryptedId) en IndexModel.cs, el input debe llamarse 'encryptedId'
            // Si el input oculto en tu _DeleteModalPartial tiene el nombre 'id', debes cambiar el PageModel a OnPostDeleteAsync(string id)
            // Por consistencia con el código proporcionado, asumiremos que el input en el modal tiene name="encryptedId" o que el PageModel usa 'id' como nombre del parámetro de la URL.
            // Para evitar modificar el partial, y basándonos en tu código JS original (que usa id) y el PageModel actualizado (que usa encryptedId), modificaremos el input a continuación:
            // **IMPORTANTE**: Asumiendo que el input oculto en el modal tiene `id="deleteId"` y estás usando un tag helper con `asp-for="id"` que resulta en `name="id"`. Vamos a asumir que el PageModel espera `encryptedId` y cambiamos el `name` del input si estuviera aquí, o simplemente usamos el `id` para el JS y cambiamos el PageModel para usar `id`.

            // Dada la firma en IndexModel.cs: public async Task<IActionResult> OnPostDeleteAsync(string encryptedId)
            // La propiedad 'name' del input oculto en el formulario del modal debe ser 'encryptedId'.
            // Si usas el mismo `id` para el input oculto del modal, asegúrate de que su atributo `name` sea `encryptedId`.

            document.getElementById('deleteId').value = encryptedId;
            document.getElementById('deleteModalMessage').textContent =
                `¿Estás seguro de eliminar el lote ${batchNumber}?`;
            deleteModal.show();
        }
    </script>
}