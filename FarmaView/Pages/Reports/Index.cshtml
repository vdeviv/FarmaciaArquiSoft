@page
@model FarmaView.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reporte de Fidelidad de Clientes";
}

<h2 class="text-center mt-4">Reporte de Fidelidad de Clientes</h2>

<form method="post" class="mt-3">
    <div class="form-group">
        <label for="StartDate">Fecha Inicio</label>
        <input type="date" asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <label for="EndDate">Fecha Fin</label>
        <input type="date" asp-for="EndDate" class="form-control" />
    </div>

    <button type="submit" asp-page-handler="Generate" class="btn btn-primary mt-3">
        Generar Reporte
    </button>
    <button type="submit" formaction="/Reports/ExportPdf" class="btn btn-success mt-3">
        Exportar a PDF
    </button>
</form>

@if (Model.ReportData != null)
{
    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Cantidad de Compras</th>
                <th>Total Gastado</th>
                <th>Promedio</th>
                <th>Última Compra</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.ReportData)
            {
                <tr>
                    <td>@c.FullName</td>
                    <td>@c.SalesCount</td>
                    <td>@c.TotalSpent.ToString("C2")</td>
                    <td>@c.AvgTicket.ToString("C2")</td>
                    <td>@c.LastSale?.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
