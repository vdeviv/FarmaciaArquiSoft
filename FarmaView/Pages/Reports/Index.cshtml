@page
@model FarmaView.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Opciones de Reportes";
}

<div class="container mt-5">
    <h2 class="text-center mb-5">
        <i class="bi bi-bar-chart-line-fill"></i> Opciones de Reportes Farmacéuticos
    </h2>
    <hr />

    <div class="row row-cols-1 row-cols-md-2 g-4">

        <div class="col">
            <div class="card h-100 shadow-lg text-center border-primary">
                <div class="card-body">
                    <i class="bi bi-person-heart display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Fidelidad de Clientes</h5>
                    <p class="card-text">
                        Analiza los clientes con más compras y mayor gasto en un período específico.
                    </p>
                    <a asp-page="/Reports/FidelityClientReport" class="btn btn-primary mt-2">
                        <i class="bi bi-file-earmark-bar-graph"></i> Generar Reporte
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-lg text-center border-success">
                <div class="card-body">
                    <i class="bi bi-boxes display-4 text-success mb-3"></i>
                    <h5 class="card-title">Inventario por Categoría</h5>
                    <p class="card-text">
                        Reporte desplegable del stock de medicinas, agrupado por categoría.
                    </p>
                    <a asp-page="/Reports/MedicineByCategoryReport" class="btn btn-success mt-2">
                        <i class="bi bi-file-earmark-spreadsheet"></i> Generar Reporte
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>