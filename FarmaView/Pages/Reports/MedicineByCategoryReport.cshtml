@page
@model FarmaView.Pages.Reports.MedicineByCategoryReportModel
@{
    ViewData["Title"] = "Reporte de Inventario por Categoría";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">
        <i class="bi bi-boxes"></i> Reporte de Inventario por Categoría
    </h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros de Búsqueda</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="Filter_CategoryId" class="form-label fw-bold">Categoría</label>
                        @* Assuming you have a list of categories in your Model.Categories to populate this *@
                        <select asp-for="Filter.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select">
                            <option value="">Todas las Categorías</option>
                        </select>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="Filter_MinPrice" class="form-label fw-bold">Precio Mínimo (Bs.)</label>
                        <input type="number" asp-for="Filter.MinPrice" class="form-control"
                               min="0" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="Filter.MinPrice" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4 mb-3 d-flex align-items-end">
                        <div class="form-check">
                            <input type="checkbox" asp-for="Filter.OnlyLowStock" class="form-check-input" />
                            <label class="form-check-label fw-bold" for="Filter_OnlyLowStock">
                                ⚠️ Mostrar solo Stock Bajo (<= @Model.Filter.LowStockThreshold)
                            </label>
                        </div>
                    </div>
                </div>

                @if (!ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <div class="d-flex gap-2 justify-content-end">
                    <button type="submit" asp-page-handler="Generate" class="btn btn-success">
                        <i class="bi bi-search"></i> Generar Reporte
                    </button>
                   @* 🚀 Botón para Exportar a PDF *@
                        <button type="submit" class="btn btn-danger me-2" asp-page-handler="ExportPdf" 
                                title="@(!Model.IsGenerated ? "Genere el reporte primero" : "Exportar a PDF")">
                            <i class="bi bi-file-earmark-pdf"></i> Exportar PDF
                        </button>

                        @* 🚀 Botón para Exportar a Excel *@
                        <button type="submit" class="btn btn-primary" asp-page-handler="ExportExcel" 
                                title="@(!Model.IsGenerated ? "Genere el reporte primero" : "Exportar a Excel")">
                            <i class="bi bi-file-earmark-excel"></i> Exportar Excel
                        </button>
                </div>
            </form>
        </div>
    </div>

    @* Esta sección solo se muestra si hay datos, similar a tu reporte de fidelidad *@
    @if (Model.ReportData != null && Model.ReportData.Any())
    {
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-table"></i>
                    Resultados del Reporte
                    <span class="badge bg-light text-dark float-end">
                        Total de Medicinas: @Model.ReportData.Count()
                    </span>
                </h5>
            </div>
            <div class="card-body p-0">

                @* El reporte desplegable (agrupado) lo haremos en el PDF/Excel, 
                   pero en la tabla HTML, lo mostramos listado con el encabezado de categoría *@

                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Categoría</th>
                                <th scope="col">Medicina</th>
                                <th scope="col" class="text-center">Stock</th>
                                <th scope="col" class="text-end">P. Unitario</th>
                                <th scope="col" class="text-end">Valor Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medicine in Model.ReportData)
                            {
                                <tr>
                                    <td><strong>@medicine.CategoryName</strong></td>
                                    <td>@medicine.MedicineName (@medicine.PresentationName)</td>
                                    <td class="text-center">
                                        @if (medicine.StockTotal <= Model.Filter.LowStockThreshold)
                                        {
                                            <span class="badge bg-danger">@medicine.StockTotal (@medicine.StockStatusText)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">@medicine.StockTotal</span>
                                        }
                                    </td>
                                    <td class="text-end">@medicine.UnitPrice.ToString("C2")</td>
                                    <td class="text-end fw-bold">@medicine.TotalValue.ToString("C2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end fw-bold">VALOR TOTAL DE INVENTARIO:</td>
                                <td class="text-end fw-bold text-success">
                                    @Model.ReportData.Sum(m => m.TotalValue).ToString("C2")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (Model.IsGenerated && !Model.ReportData.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>No se encontraron resultados</strong> para los filtros seleccionados.
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}