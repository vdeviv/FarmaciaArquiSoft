    @page
    @model FarmaView.Pages.Provider.CreateModel
    @{
        ViewData["Title"] = "Nuevo proveedor";
    }

    <h2>Nuevo proveedor</h2>

    <form method="post" novalidate>
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label">Primer nombre</label>
                <input asp-for="Input.first_name" class="form-control" />
                <span asp-validation-for="Input.first_name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Segundo nombre</label>
                <input asp-for="Input.second_name" class="form-control" />
                <span asp-validation-for="Input.second_name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Apellido paterno</label>
                <input asp-for="Input.last_first_name" class="form-control" />
                <span asp-validation-for="Input.last_first_name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Apellido materno</label>
                <input asp-for="Input.last_second_name" class="form-control" />
                <span asp-validation-for="Input.last_second_name" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label">NIT</label>
                <input asp-for="Input.nit" class="form-control" />
                <span asp-validation-for="Input.nit" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label class="form-label">Dirección</label>
                <input asp-for="Input.address" class="form-control" />
                <span asp-validation-for="Input.address" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input asp-for="Input.email" class="form-control" />
                <span asp-validation-for="Input.email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Teléfono</label>
                <input asp-for="Input.phone" class="form-control" />
                <span asp-validation-for="Input.phone" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.status" />
                    <label class="form-check-label" for="Input_status">Activo</label>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary me-2">Guardar</button>
            <a asp-page="/Provider/IndexProvider" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
